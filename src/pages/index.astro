---
import Base from "../layouts/Base.astro";
import PackageCard from "../components/PackageCard.astro";
import registryData from "../data/packages.json";
import type { PackageSummary } from "../types";

const featured = (registryData.packages as PackageSummary[])
  .sort((a, b) => b.downloads - a.downloads)
  .slice(0, 6);
---

<Base title="Planmode — Plans you can install.">
  <!-- Hero -->
  <section class="max-w-6xl mx-auto px-4 pt-20 pb-16 text-center">
    <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight mb-6">
      Plans you can <span class="text-red-accent">install</span>.
    </h1>
    <p class="text-lg text-grey-text max-w-2xl mx-auto mb-10 leading-relaxed">
      The open source package manager for AI plans, rules, and prompts.
      Discover, install, and share the instructions that drive AI-assisted development.
    </p>

    <div class="max-w-md mx-auto mb-8">
      <div class="flex items-center bg-black-card border border-grey-border/30 rounded-lg overflow-hidden">
        <span class="pl-4 text-grey-text text-sm select-none">$</span>
        <code class="flex-1 px-2 py-3 text-sm font-mono text-grey-light select-all">
          npm install -g planmode
        </code>
        <button
          id="hero-copy"
          class="px-4 py-3 text-grey-text hover:text-white transition-colors border-l border-grey-border/30"
          aria-label="Copy install command"
        >
          <svg class="w-4 h-4 copy-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
          <svg class="w-4 h-4 check-icon hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
          </svg>
        </button>
      </div>
    </div>

    <div class="flex flex-wrap justify-center gap-4">
      <a
        href="/packages"
        class="px-6 py-2.5 bg-red-accent text-white text-sm font-medium rounded-lg hover:bg-red-hover transition-colors"
      >
        Browse Packages
      </a>
      <a
        href="/docs"
        class="px-6 py-2.5 bg-black-card border border-grey-border/30 text-white text-sm font-medium rounded-lg hover:border-grey-border/50 transition-colors"
      >
        Get Started
      </a>
    </div>
  </section>

  <!-- How it works -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-2xl font-bold text-center mb-12">How it works</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 bg-red-accent/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-red-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>
        <h3 class="font-semibold mb-2">Discover</h3>
        <p class="text-sm text-grey-text leading-relaxed">
          Search the registry for plans, rules, and prompts. Find battle-tested instructions for any stack.
        </p>
      </div>
      <div class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 bg-red-accent/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-red-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
        </div>
        <h3 class="font-semibold mb-2">Install</h3>
        <p class="text-sm text-grey-text leading-relaxed">
          One command. Files land in your project, <code class="text-xs bg-black-card px-1.5 py-0.5 rounded">CLAUDE.md</code> gets updated. Dependencies resolve automatically.
        </p>
      </div>
      <div class="text-center">
        <div class="w-12 h-12 mx-auto mb-4 bg-red-accent/10 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-red-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="font-semibold mb-2">Use</h3>
        <p class="text-sm text-grey-text leading-relaxed">
          Claude Code picks up the installed plans and rules automatically. Start building with expert-level AI instructions.
        </p>
      </div>
    </div>
  </section>

  <!-- Package types -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <h2 class="text-2xl font-bold text-center mb-12">Three types of packages</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-black-card border border-grey-border/20 rounded-lg p-6">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-red-accent/15 text-red-accent">plan</span>
        </div>
        <h3 class="font-semibold mb-2">Plans</h3>
        <p class="text-sm text-grey-text leading-relaxed mb-3">
          Multi-step implementation guides. The most valuable package type — ordered tasks with dependencies on rules and sub-plans.
        </p>
        <p class="text-xs text-grey-text/70 font-mono">plans/*.md &rarr; @import in CLAUDE.md</p>
      </div>
      <div class="bg-black-card border border-grey-border/20 rounded-lg p-6">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-blue-badge-bg text-blue-badge">rule</span>
        </div>
        <h3 class="font-semibold mb-2">Rules</h3>
        <p class="text-sm text-grey-text leading-relaxed mb-3">
          Always-on constraints. Persistent guidelines that shape every AI interaction in your project.
        </p>
        <p class="text-xs text-grey-text/70 font-mono">.claude/rules/*.md &rarr; auto-loaded</p>
      </div>
      <div class="bg-black-card border border-grey-border/20 rounded-lg p-6">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-green-badge-bg text-green-badge">prompt</span>
        </div>
        <h3 class="font-semibold mb-2">Prompts</h3>
        <p class="text-sm text-grey-text leading-relaxed mb-3">
          Fire once, get a result. Standalone instructions with templating support for reusable, parameterized prompts.
        </p>
        <p class="text-xs text-grey-text/70 font-mono">planmode run &lt;prompt&gt; | claude</p>
      </div>
    </div>
  </section>

  <!-- Featured packages -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold">Popular packages</h2>
      <a href="/packages" class="text-sm text-red-accent hover:text-red-hover transition-colors">
        View all &rarr;
      </a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {featured.map((pkg) => (
        <PackageCard pkg={pkg} />
      ))}
    </div>
  </section>

  <!-- Open source -->
  <section class="max-w-6xl mx-auto px-4 py-16">
    <div class="bg-black-card border border-grey-border/20 rounded-lg p-8 md:p-12 text-center">
      <h2 class="text-2xl font-bold mb-4">Open source. Community-driven.</h2>
      <p class="text-grey-text max-w-2xl mx-auto mb-8 leading-relaxed">
        Planmode is MIT licensed. The registry is a GitHub repo. Packages are
        <code class="text-xs bg-black-primary px-1.5 py-0.5 rounded">.md</code> files.
        If Planmode disappears, everything still works.
      </p>
      <a
        href="https://github.com/kaihannonen/planmode.org"
        class="inline-flex items-center gap-2 px-6 py-2.5 bg-white text-black-primary text-sm font-medium rounded-lg hover:bg-grey-light transition-colors"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        Star on GitHub
      </a>
    </div>
  </section>
</Base>

<script>
  const btn = document.getElementById("hero-copy");
  btn?.addEventListener("click", async () => {
    await navigator.clipboard.writeText("npm install -g planmode");
    const copyIcon = btn.querySelector(".copy-icon") as HTMLElement;
    const checkIcon = btn.querySelector(".check-icon") as HTMLElement;
    copyIcon.classList.add("hidden");
    checkIcon.classList.remove("hidden");
    setTimeout(() => {
      copyIcon.classList.remove("hidden");
      checkIcon.classList.add("hidden");
    }, 2000);
  });
</script>
